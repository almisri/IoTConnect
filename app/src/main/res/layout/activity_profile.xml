<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/latobold"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView4"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/profilefoto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/uploadFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/gantifoto"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:fontFamily="@font/latobold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/profilecontainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latobold"
                android:text="Name"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="@+id/textView12" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="108dp"
                android:layout_height="16dp"
                android:fontFamily="@font/latobold"
                android:text="Arsan Ganteng"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="55dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toTopOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/profilecontainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latobold"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView14"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toTopOf="@+id/textView14" />

            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latobold"
                android:text="arsanketcew@gmail.com"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textView14"
                app:layout_constraintStart_toStartOf="@+id/profileName"
                app:layout_constraintTop_toTopOf="@+id/textView14" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/profilecontainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latobold"
                android:text="Telephone"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

            <TextView
                android:id="@+id/profileNotelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latobold"
                android:text="085342248110"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/profileEmail"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

            <TextView
                android:id="@+id/containerPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="36dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/profilecontainer"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:background="@drawable/lock"
                android:layout_marginLeft="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/containerPassword"
                app:layout_constraintStart_toStartOf="@+id/containerPassword"
                app:layout_constraintTop_toTopOf="@+id/containerPassword" />

            <TextView
                android:id="@+id/txtChangepass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/latobold"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Change Password"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/containerPassword"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/containerPassword" />

            <TextView
                android:id="@+id/rightPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/righticon"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@+id/containerPassword"
                app:layout_constraintEnd_toEndOf="@+id/containerPassword"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="@+id/containerPassword" />

            <TextView
                android:id="@+id/containerNotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:background="@drawable/profilecontainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/containerPassword" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:background="@drawable/notificon"
                app:layout_constraintBottom_toBottomOf="@+id/containerNotif"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/containerNotif" />

            <TextView
                android:id="@+id/txtNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:text="Notifikasi"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:fontFamily="@font/latobold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toEndOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/txtChangepass" />

            <TextView
                android:id="@+id/rightNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/righticon"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@+id/containerNotif"
                app:layout_constraintEnd_toEndOf="@+id/rightPass"
                app:layout_constraintTop_toTopOf="@+id/containerNotif" />

            <TextView
                android:id="@+id/containerTatacara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="36dp"
                android:layout_marginLeft="36dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:background="@drawable/profilecontainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/containerNotif" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tatacaraicon"
                app:layout_constraintBottom_toBottomOf="@+id/containerTatacara"
                app:layout_constraintStart_toStartOf="@+id/textView23"
                app:layout_constraintTop_toTopOf="@+id/containerTatacara" />

            <TextView
                android:id="@+id/txtTatacara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/latobold"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Tata cara penggunaan"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/containerTatacara"
                app:layout_constraintStart_toStartOf="@+id/txtNotif"
                app:layout_constraintTop_toTopOf="@+id/containerTatacara" />

            <TextView
                android:id="@+id/rightTatacara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/righticon"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@+id/containerTatacara"
                app:layout_constraintEnd_toEndOf="@+id/rightNotif"
                app:layout_constraintTop_toTopOf="@+id/containerTatacara" />

            <Button
                android:id="@+id/btnKeluar"
                android:layout_width="143dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/monitoringbtn"
                android:text="Keluar"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                android:fontFamily="@font/latoregular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/containerTatacara" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@id/btnKeluar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <TextView
        android:id="@+id/homeicon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/homeicon"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/monitoringicon"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="85dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/monitoringicon"
        android:layout_width="68dp"
        android:layout_height="89.98dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/iotconnecticon"
        android:clickable="true"
        android:layout_marginBottom="34.02dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/profileicon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/profileicon"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/monitoringicon" />

</androidx.constraintlayout.widget.ConstraintLayout>